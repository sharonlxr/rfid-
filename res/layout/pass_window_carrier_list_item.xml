<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/pass_window_carrier_item_flag"
        android:src="@drawable/success"
    	android:padding="8dip"
    	android:visibility="invisible"
    	android:contentDescription="@string/title_activity_check_magazine" />

    <TextView
        android:id="@+id/pass_window_carrier_item_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pass_window_carrier_item_rack"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pass_window_carrier_item_slot"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp" />

</LinearLayout>