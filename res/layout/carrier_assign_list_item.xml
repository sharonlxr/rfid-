<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/carrier_assign_tag_name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2 "
        android:textColor="#004080"
        android:textSize="16sp" />

    <Button
        android:id="@+id/carrier_assign_button_deassign"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/button_deassign" />
    <Button
        android:id="@+id/carrier_assign_button_deassign_input"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/button_deassign_input" />
    <Button
        android:id="@+id/carrier_assign_button_deassign_output"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/button_deassign_output" />

</LinearLayout>